    <field name="showAvatar" type="I">
      <unsigned />
      <default value="1" />
    </field>
    <field name="showAvatarTimeline" type="I">
        <unsigned />
        <default value="1" />
    </field>
    <field name="showFollowLink" type="I">
      <unsigned />
      <default value="1" />
